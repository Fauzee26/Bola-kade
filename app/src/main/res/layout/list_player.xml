<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgPlayer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/txtPlayer"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="7dp"
        android:layout_toEndOf="@id/imgPlayer"
        android:layout_toRightOf="@id/imgPlayer"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Aaron Ramsey" />

    <TextView
        android:id="@+id/txtPosition"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/txtPlayer"
        android:layout_toRightOf="@id/txtPlayer"
        android:gravity="center_vertical"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        tools:ignore="RtlCompat"
        tools:text="Midfielder" />
</RelativeLayout>